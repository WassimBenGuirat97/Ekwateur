<!DOCTYPE module PUBLIC
          "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
          "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <!-- Settings -->
    <property name="severity" value="error"/> <!-- Global severity level -->

    <!-- Specify severity levels for individual checks -->
    <module name="TreeWalker">
        <module name="JavadocMethod">
            <property name="severity" value="error"/>
        </module>
        <module name="JavadocType">
            <property name="severity" value="error"/>
        </module>
        <!-- Ignore magic numbers -->
        <module name="MagicNumber">
            <property name="severity" value="ignore"/>
        </module>
        <!-- Ignore FinalParameters -->
        <module name="FinalParameters">
            <property name="ignoreMethodParameters" value="true"/>
        </module>
        <!-- Add more modules with their respective severity levels -->
    </module>
    
    <!-- Ignore LineLength -->
    <module name="LineLength">
        <property name="ignorePattern" value=".*"/>
    </module>
</module>
